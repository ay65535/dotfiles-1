# focus window
shift + alt - j : yabai -m window --focus next
shift + alt - k : yabai -m window --focus prev

# swap window
shift + ctrl + alt - j : yabai -m window --swap next
shift + ctrl + alt - k : yabai -m window --swap prev

# move window
# shift + ctrl + alt - j : yabai -m window --warp next
# shift + ctrl + alt - k : yabai -m window --warp prev

# fast focus desktop
shift + alt - 1 : skhd -k 'ctrl - 1'
shift + alt - 2 : skhd -k 'ctrl - 2'
shift + alt - 3 : skhd -k 'ctrl - 3'
shift + alt - 4 : skhd -k 'ctrl - 4'
shift + alt - 5 : skhd -k 'ctrl - 5'
shift + alt - 6 : skhd -k 'ctrl - 6'
shift + alt - 7 : skhd -k 'ctrl - 7'

# send window to desktop and follow focus
shift + ctrl + alt - 1 : yabai -m window --space 1; yabai -m space --focus 1
shift + ctrl + alt - 2 : yabai -m window --space 2; yabai -m space --focus 2
shift + ctrl + alt - 3 : yabai -m window --space 3; yabai -m space --focus 3
shift + ctrl + alt - 4 : yabai -m window --space 4; yabai -m space --focus 4
shift + ctrl + alt - 5 : yabai -m window --space 5; yabai -m space --focus 5
shift + ctrl + alt - 6 : yabai -m window --space 6; yabai -m space --focus 6
shift + ctrl + alt - 7 : yabai -m window --space 7; yabai -m space --focus 7
shift + ctrl + alt - left : yabai -m window --space prev; yabai -m space --focus prev
shift + ctrl + alt - right : yabai -m window --space next; yabai -m space --focus next

# focus monitor
shift + alt - w  : yabai -m display --focus 1
shift + alt - e  : yabai -m display --focus 2
shift + alt - r  : yabai -m display --focus 3
shift + alt - q  : yabai -m display --focus 4

# send window to monitor and follow focus
shift + ctrl + alt - w  : yabai -m window --display 1; yabai -m display --focus 1
shift + ctrl + alt - e  : yabai -m window --display 2; yabai -m display --focus 2
shift + ctrl + alt - r  : yabai -m window --display 3; yabai -m display --focus 3
shift + ctrl + alt - q  : yabai -m window --display 4; yabai -m display --focus 4
shift + ctrl + alt - h  : yabai -m window --display prev; yabai -m display --focus prev
shift + ctrl + alt - l  : yabai -m window --display next; yabai -m display --focus next

# float / unfloat window and center on screen
shift + alt - t : yabai -m window --toggle float;\
                  yabai -m window --grid 4:4:1:1:2:2

# change layout of desktop
shift + alt - space : yabai -m window --toggle zoom-fullscreen
