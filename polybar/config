[module/cpu]
type = internal/cpu

format = <label>
label = %{F#ffffff}cpu%{F-}%{O6}:%{O6}%percentage%%

[module/memory]
type = internal/memory

format = <label>
label = %{F#ffffff}mem%{F-}%{O6}:%{O6}%mb_used%%{O4}/%{O4}%mb_total%

[module/network]
