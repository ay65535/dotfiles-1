[
  // 既定値を上書きするには、このファイル内にキー バインドを挿入します
  {
    "key": "ctrl+]",
    "command": "extension.vim_escape",
    "when": "vim.active && editorTextFocus && !inDebugRepl"
  },
  // Editor UI
  // ---------
  // Go to previous tab
  {
    "key": "alt+left",
    "command": "workbench.action.previousEditorInGroup",
    "when": "vim.active && !inDebugRepl"
  },
  // Go to next tab
  {
    "key": "alt+right",
    "command": "workbench.action.nextEditorInGroup",
    "when": "vim.active && !inDebugRepl"
  },
  // File Tree Navigation
  // --------------------
  // Toggle file explorer
  {
    "key": "f3",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "vim.active && !inDebugRepl"
  },
  // go to parent node and collapse expanded directory
  {
    "key": "h",
    "command": "list.collapse",
    "when": "vim.active && listFocus && !inputFocus && !inDebugRepl"
  },
  // open selected file or expand directory
  {
    "key": "l",
    "command": "list.expand",
    "when": "vim.active && listFocus && !inputFocus && !inDebugRepl"
  },
  // Create new directory under cursor
  {
    "key": "shift+k",
    "command": "explorer.newFolder",
    "when": "vim.active && explorerViewletVisible && explorerViewletFocus && !inputFocus && !inDebugRepl"
  },
  // Create new file under cursor
  {
    "key": "shift+n",
    "command": "explorer.newFile",
    "when": "vim.active && explorerViewletVisible && explorerViewletFocus && !inputFocus && !inDebugRepl"
  },
  // Paste file to the position under the cursor
  {
    "key": "shift+p",
    "command": "filesExplorer.paste",
    "when": "vim.active && explorerViewletVisible && explorerViewletFocus && !inputFocus && !inDebugRepl"
  },
  // Redraw
  {
    "key": "ctrl+r",
    "command": "workbench.files.action.refreshFilesExplorer",
    "when": "vim.active && explorerViewletVisible && explorerViewletFocus && !inputFocus && !inDebugRepl"
  },
  // Searching Files in Project
  // --------------------------
  // find files in current project
  {
    "key": "ctrl+p",
    "command": "workbench.action.quickOpen",
    "when": "vim.active && !inDebugRepl"
  },
]