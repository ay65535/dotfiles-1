# npm
alias -s npmg 'npm i -g'
alias -s npmS 'npm i -S'
alias -s npmD 'npm i -D'
alias -s npmO 'npm outdated'
alias -s npmV 'npm -v'
alias -s npmL 'npm list'
alias -s npmL0 'npm ls --depth=0'
alias -s npmst 'npm start'
alias -s npmt 'npm test'
alias -s npmR 'npm run'
alias -s npmP 'npm publish'
alias -s npmI 'npm init'

# yarn
alias -s y 'yarn'
alias -s ya 'yarn add'
alias -s yad 'yarn add --dev'
alias -s ycc 'yarn cache clean'
alias -s yh 'yarn help'
# alias -s yo 'yarn outdated'
alias -s yui 'yarn upgrade-interactive'

# react-native
alias -s rn 'react-native'
alias -s rns 'react-native start'
alias -s rnlink 'react-native link'
alias -s rnand 'react-native run-android'
alias -s rnios 'react-native run-ios'
alias -s rnios4s "react-native run-ios --simulator 'iPhone 4s'"
alias -s rnios5 "react-native run-ios --simulator 'iPhone 5'"
alias -s rnios5s "react-native run-ios --simulator 'iPhone 5s'"
alias -s rnios6 "react-native run-ios --simulator 'iPhone 6'"
alias -s rnios6s "react-native run-ios --simulator 'iPhone 6s'"
alias -s rnland 'react-native log-android'
alias -s rnlios 'react-native log-ios'
