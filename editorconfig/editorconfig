# -*- mode: editorconfig-mode -*-
root = true

[*]
end_of_line = lf
charset = utf-8

# C/C++
[*.{c,cpp,h,hpp]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
# Makefiles always use tabs for indentation
[Makefile]
indent_style = tab
trim_trailing_whitespace = true
insert_final_newline = true

# HTML
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Haskell
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# JSON
[*.json]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = ignore

# JavaScript
[*.{js,jsx}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = true

# Python
[*.py]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 119

# Ruby
[{*.rb,Rakefile}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Rust
[*.rs]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# TypeScript
[*.{ts,tsx}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
