#!/usr/bin/env bash
# -*- mode: bash -*-

# xmobar-fcitx-mode --- Show the current input mode of fcitx
# author: Seong Yong-ju <sei40kr@gmail.com>

set -euo pipefail
IFS=$'\n\t'

if hash fcitx-remote 2>/dev/null; then
  case "$(fcitx-remote)" in
    1)
      echo 'Aa'
      ;;
    2)
      echo '„ÅÇ'
      ;;
  esac
fi
