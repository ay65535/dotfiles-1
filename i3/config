    urgent_workspace   #222226 #222226 #bc6ec5
    binding_mode       #2f343a #900000 #ffffff
  }
}

# gaps
gaps outer 4
gaps inner 16

# Smart Gaps
smart_gaps on

exec_always --no-startup-id ~/.local/bin/comp
exec_always --no-startup-id ~/.fehbg
exec_always --no-startup-id fcitx-autostart
