client.focused_inactive #444155 #444155 #b2b2b2 #444155   #444155
client.unfocused        #222226 #222226 #b2b2b2 #222226   #222226
client.urgent           #222226 #222226 #bc6ec5 #222226   #222226
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

client.background       #212026

bar {
  status_command i3status
  i3bar_command i3bar -t
  position top

  # Colors
  colors {
    background #222226
    statusline #b2b2b2
    separator #666666

    # class            border  backgr. text
    focused_workspace  #5d4d7e #5d4d7e #b2b2b2
    active_workspace   #444155 #444155 #b2b2b2
