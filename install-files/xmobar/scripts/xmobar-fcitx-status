    echo "ERROR: fcitx-remote was not found or is not executable." >&2
    exit 1
fi

if [[ "$(fcitx-remote)" == 2 ]]; then
    echo '<fn=7>„ÅÇ</fn>'
else
    echo '<fn=7>Aa</fn>'
fi
